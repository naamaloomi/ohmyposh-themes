{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "template": "\u2554\u2563",
          "foreground": "#22669e"
        },
        {
          "type": "session",
          "style": "powerline",
          "template": "{{if .Root}} \uf0e7{{else}} \uf64f {{end}}",
          "background": "#22669e",
          "foreground": "#ffffff",
          "properties": {
            "style": "folder",
            "display_host": false
          }
        },
        {
          "type": "time",
          "style": "powerline",
          "template": "{{ .CurrentDate | date .Format }} ",
          "background": "#22669e",
          "foreground": "#ffffff"
        },
        {
          "type": "executiontime",
          "style": "powerline",
          "template": " {{ .FormattedMs }} ",
          "background": "#19be92",
          "foreground": "#000000",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "always_enabled": true
          }
        },
        {
          "type": "path",
          "style": "powerline",
          "template": " \ue5ff {{ .Path }} ",
          "background": "#7f0f96",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "folder_icon": "\uf115",
            "folder_separator_icon": " \ue0b1 ",
            "style": "folder"
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if gt .StashCount 0 }} \uf692 {{ .StashCount }}{{ end }} ",
          "background": "#00d41c",
          "foreground": "#193549",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "cherry_pick_icon": "\u2713 ",
            "commit_icon": "\u25b7 ",
            "fetch_status": true,
            "merge_icon": "\u25f4 ",
            "no_commits_icon": "[no commits]",
            "rebase_icon": "\u2c62 ",
            "tag_icon": "\u25b6 "
          }
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "style": "plain",
          "foreground": "#22669e",
          "template": "\u255a\u2563\ue0b0",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "console_title_template": "{{if .Root}} \u26a1 {{end}}\u2659{{.UserName}}  ðŸ–¿ {{.Folder}}",
  "final_space": true,
  "version": 2
}
