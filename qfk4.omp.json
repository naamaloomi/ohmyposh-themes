{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "console_title_template": "{{if .Root}} âš¡ {{end}}â™™{{.UserName}}  ðŸ–¿ {{.Folder}}",
    "blocks": [
        {
            "alignment": "left",
            "type": "prompt",
            "segments": [
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#145adb",
                    "template": "\ue0c7 ",
                    "properties": {
                        "cache_duration": "none"
                    }
                },
                {
                    "type": "os",
                    "style": "plain",
                    "foreground": "#dce8ff",
                    "background": "#145adb",
                    "template": " {{ if eq .OS \"nobara\" }}\uf380{{ else if .WSL }}f31a{{ else }}{{.Icon}}{{ end }} "
                },
                {
                    "type": "session",
                    "style": "powerline",
                    "foreground": "#dce8ff",
                    "background": "#145adb",
                    "template": "{{if .Root}} \uf0e7 {{else}} {{end}}",
                    "properties": {
                        "cache_duration": "none",
                        "display_host": false,
                        "style": "folder"
                    }
                },
                {
                    "type": "time",
                    "style": "diamond",
                    "foreground": "#dce8ff",
                    "background": "#145adb",
                    "template": "{{ .CurrentDate | date .Format }} ",
                    "trailing_diamond": "\ue0b0",
                    "properties": {
                        "cache_duration": "none"
                    }
                },
                {
                    "type": "path",
                    "style": "diamond",
                    "foreground": "#f8e3fd",
                    "background": "#7f0f96",
                    "template": " {{ .Path }} ",
                    "leading_diamond": "<transparent,#7f0f96>\ue0b0</>",
                    "trailing_diamond": "\ue0b0",
                    "properties": {
                        "cache_duration": "none",
                        "folder_icon": "\uf115",
                        "folder_separator_icon": " \ue0bd ",
                        "style": "agnoster_short",
                        "home_icon": "\uf015"
                    }
                },
                {
                    "type": "git",
                    "style": "diamond",
                    "foreground": "#193549",
                    "background": "#00d41c",
                    "leading_diamond": "<transparent,#00d41c>\ue0b0</>",
                    "trailing_diamond": "\ue0b0",
                    "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if gt .StashCount 0 }} \uf692 {{ .StashCount }}{{ end }} ",
                    "properties": {
                        "cache_duration": "none",
                        "cherry_pick_icon": "âœ“ ",
                        "commit_icon": "\u25b7 ",
                        "fetch_status": true,
                        "merge_icon": "\u25f4 ",
                        "no_commits_icon": "[no commits]",
                        "rebase_icon": "\u2c62 ",
                        "tag_icon": "\u25b6 "
                    }
                }
            ]
        },
        {
            "alignment": "right",
            "type": "prompt",
            "segments": [
                {
                    "type": "session",
                    "style": "diamond",
                    "foreground": "#43CCEA",
                    "background": "#29315A",
                    "leading_diamond": "\ue0b2",
                    "trailing_diamond": "<transparent,#29315A>\ue0b2</>",
                    "template": " \uf2bd {{ .UserName }} \uf4a9 {{ .HostName }} "
                },
                {
                    "type": "executiontime",
                    "style": "diamond",
                    "foreground": "#19be92",
                    "background": "#0b5541",
                    "leading_diamond": "\ue0b2",
                    "trailing_diamond": "<#0b5541,transparent>\ue0c6 </>",
                    "template": " \uf520 {{ .FormattedMs }} ",
                    "properties": {
                        "always_enabled": true,
                        "cache_duration": "none"
                    }
                }
            ]
        },
        {
            "alignment": "left",
            "type": "prompt",
            "segments": [
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#145adb",
                    "template": "\ue0c7 \ue0b0",
                    "properties": {
                        "cache_duration": "none"
                    }
                }
            ],
            "newline": true
        }
    ],
    "version": 3,
    "final_space": true
}
